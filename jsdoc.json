{
    "source": {
        "include": ["src"],
        "includePattern": "\\.ts$",
        "excludePattern": "(node_modules/|docs)",
        "exclude": ["src/index.ts"]
    },
    "plugins": [
        "plugins/markdown",
        "better-docs/category",
        "better-docs/component",
        "better-docs/typescript"
    ],
    "templates": {
        "cleverLinks": true,
        "monospaceLinks": true
    },
    "opts": {
        "recurse": true,
        "destination": "./docs/",
        "template": "./node_modules/better-docs"
    }
}